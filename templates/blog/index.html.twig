{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	{% include "parts/banniere.html.twig" %}
	<div class="container">
		<div class="row">
			<div class="col">
				<h2 class="text-center">Ma boutique</h2>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">
			{% for produit in produits %}
				<div class="col-md-6 col-lg-3 col-sm-12">
					<div class="card image-card">
						<h2 class="pl-2">
							<a href="{{path('show', {'id': produit.Id})}}" style="color:gold">{{produit.Nom}}</a>
						</h2>
						<img src="{{produit.Image}}" class="img-fluid">
						<span class="text-center">{{produit.DescriptionCourte}}</span>

						<span class="text-center">{{produit.Tarif}}â‚¬</span>
					</div>
				</div>
			{% endfor %}
		</div>
	{% endblock %}
